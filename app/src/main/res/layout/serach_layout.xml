<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="农户:"
        android:id="@+id/nonghuID"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="农产品种类:"
        android:id="@+id/chanPinZhongLei"
        android:layout_above="@+id/startDate"
        android:layout_alignLeft="@+id/nonghuID"
        android:layout_alignStart="@+id/nonghuID"
        android:layout_marginBottom="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="交易日期:"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/chanPinZhongLei"
        android:layout_alignStart="@+id/chanPinZhongLei"
        android:layout_marginBottom="195dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NongHuMing"
        android:layout_alignBottom="@+id/nonghuID"
        android:layout_toEndOf="@+id/chanPinZhongLei"
        android:layout_toRightOf="@+id/chanPinZhongLei" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ZhongLei"
        android:layout_alignBottom="@+id/chanPinZhongLei"
        android:layout_toRightOf="@+id/chanPinZhongLei"
        android:layout_toEndOf="@+id/chanPinZhongLei" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startDate"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/endDate"
        android:layout_alignLeft="@+id/ZhongLei"
        android:layout_alignStart="@+id/ZhongLei" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/endDate"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/chanPinZhongLei"
        android:layout_toRightOf="@+id/chanPinZhongLei" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:id="@+id/search."
        android:layout_marginTop="59dp"
        android:background="#8872ff"
        android:layout_below="@+id/endDate"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
